def debug_aclarapp():
    """Función para debuguear el archivo Aclarapp"""
    ruta = "c:/Copia-reporte-Aclarabot/Copy-Aclarapp/TablaCopiadaDeAclarapp.csv"
    
    if not os.path.exists(ruta):
        print("✗ Archivo no existe")
        return
    
    # Leer y mostrar contenido
    with open(ruta, 'r', encoding='utf-8') as f:
        contenido = f.read()
    
    print("=" * 60)
    print("CONTENIDO DEL ARCHIVO ACLARAPP:")
    print("=" * 60)
    print(contenido[:2000])  # Primeros 2000 caracteres
    print("=" * 60)
    
    # Mostrar primeras 20 líneas
    lineas = contenido.split('\n')
    print("\nPRIMERAS 20 LÍNEAS:")
    for i, linea in enumerate(lineas[:20]):
        print(f"{i+1:3}: {linea}")
    
    # Buscar "ID Aclaración"
    print("\nBUSCANDO 'ID Aclaración':")
    for i, linea in enumerate(lineas):
        if 'ID Aclaración' in linea:
            print(f"Encontrado en línea {i+1}: {linea[:100]}...")
            break

# Ejecutar debug
debug_aclarapp()
