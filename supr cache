@echo off
title 🧹 Limpieza básica de Windows
color 0A

echo ==============================
echo    LIMPIEZA BÁSICA WINDOWS
echo ==============================
echo.

:: Borrar archivos temporales del usuario
echo 🗑️  Eliminando archivos temporales...
del /s /f /q "%temp%\*.*" >nul 2>&1
for /d %%x in ("%temp%\*") do rd /s /q "%%x"

:: Borrar caché de miniaturas del usuario
echo 🖼️  Borrando cache de miniaturas...
del /s /f /q "%LocalAppData%\Microsoft\Windows\Explorer\thumbcache_*.db" >nul 2>&1

:: Vaciar Papelera de reciclaje del usuario
echo 🧺 Vaciando papelera de reciclaje...
PowerShell.exe -NoLogo -Command Clear-RecycleBin -Force

echo.
echo ✅ Limpieza completada.
pause
