import pandas as pd
import glob

# Ruta donde se guardan los archivos CSV
folder_path = "C:/Ruta/De/Tu/Carpeta"

# Obtener la lista de archivos CSV
all_files = glob.glob(folder_path + "/*.csv")

# Leer y combinar todos los archivos en un solo DataFrame
df_list = [pd.read_csv(file) for file in all_files]
df = pd.concat(df_list, ignore_index=True)

# Mostrar las primeras filas (para verificar que los datos est√°n correctos)
df.head()
