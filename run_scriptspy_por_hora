import time
import os
from datetime import datetime

# ğŸ§© CONFIGURACIÃ“N
wait_between_scripts = 10   # segundos entre cada script
wait_between_cycles = 3600  # 1 hora en segundos

# ğŸ§© Rutas de tus scripts Python
script1 = r"C:\ruta\a\Python 1.py"
script2 = r"C:\ruta\a\Python 2.py"
script3 = r"C:\ruta\a\Python 3.py"

print("ğŸ” Iniciando ejecuciÃ³n automÃ¡tica cada 1 hora...\n")

while True:
    print("ğŸ•’ Nueva ejecuciÃ³n â€”", datetime.now().strftime("%Y-%m-%d %H:%M:%S"))
    
    # Script 1
    print("\nğŸ Ejecutando Python 1.py...")
    os.system(f'python "{script1}"')

    print(f"â³ Esperando {wait_between_scripts} segundos...\n")
    time.sleep(wait_between_scripts)

    # Script 2
    print("ğŸš€ Ejecutando Python 2.py...")
    os.system(f'python "{script2}"')

    print(f"â³ Esperando {wait_between_scripts} segundos...\n")
    time.sleep(wait_between_scripts)

    # Script 3
    print("ğŸ§© Ejecutando Python 3.py...")
    os.system(f'python "{script3}"')

    print("\nâœ… EjecuciÃ³n completa de los 3 scripts.")
    print("ğŸŒ™ Esperando 1 hora para la siguiente ejecuciÃ³n...\n")

    time.sleep(wait_between_cycles)
