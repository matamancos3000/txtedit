import time
import os
from datetime import datetime

# ğŸ•’ CONFIGURACIÃ“N
target_hour = 22     # 10 PM en formato 24h
target_minute = 29   # 29 minutos
wait_seconds = 10    # Espera entre scripts

# ğŸ§© Rutas de tus scripts
script1 = r"C:\ruta\a\Python 1.py"
script2 = r"C:\ruta\a\Python 2.py"

print("ğŸ’« Iniciando programa diario de ejecuciÃ³n automÃ¡tica...")
print(f"ğŸ•’ Los scripts se ejecutarÃ¡n cada dÃ­a a las {target_hour}:{target_minute:02d}.\n")

while True:
    now = datetime.now()

    # Comprueba si es la hora exacta
    if now.hour == target_hour and now.minute == target_minute:
        print("ğŸ Ejecutando Python 1.py...")
        os.system(f'python "{script1}"')

        print(f"â³ Esperando {wait_seconds} segundos antes del siguiente script...")
        time.sleep(wait_seconds)

        print("ğŸš€ Ejecutando Python 2.py...")
        os.system(f'python "{script2}"')

        print("âœ… Tareas completadas con Ã©xito.")
        print("ğŸŒ™ Esperando hasta la prÃ³xima ejecuciÃ³n diaria...\n")

        # Espera un poco mÃ¡s de un minuto para evitar mÃºltiples ejecuciones en el mismo minuto
        time.sleep(65)

    # Espera 10 segundos antes de volver a comprobar la hora
    time.sleep(10)
