from pywinauto.application import Application
import time

window_title = "NOMBRE EXACTO DE TU VENTANA"

try:
    # Intentar conectar con la ventana
    app = Application(backend="uia").connect(title=window_title)
    dlg = app.window(title=window_title)
    print("Ventana encontrada.")

    # Esperar 10 segundos antes de minimizar
    time.sleep(10)
    print("Minimizando ventana...")
    dlg.minimize()

    # Esperar 10 segundos antes de restaurar
    time.sleep(10)
    print("Restaurando ventana...")
    dlg.restore()

    print("Proceso completado sin traer la ventana al frente.")

except Exception as e:
    print(f"No se encontr√≥ la ventana: {e}")
